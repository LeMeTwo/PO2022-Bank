<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.TextArea?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.po.SceneController">
    <children>
        <Button   fx:id="ToCounters" layoutX="262" layoutY="300" mnemonicParsing="false" onAction="#switchToCounters" text="To counters" />
        <TextArea fx:id="StockArea"  layoutX="200" layoutY="75"  prefHeight="200" prefWidth="200" editable="false"/>
        <Button   fx:id="Show"       layoutX="280" layoutY="250" mnemonicParsing="false" onAction="#ShowStock"        text="Show" />
        <TextField editable="false"  layoutX="110" layoutY="10"  prefHeight="40" prefWidth="380" text="You are standing in front of the board. You see stock rates displayed." />
    </children>
</AnchorPane>
